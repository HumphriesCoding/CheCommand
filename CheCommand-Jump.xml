<?xml version="1.0"?>
<view width="300" height="300" title="Jump Control">

    <control type="layout">

        <control type="button" name="Jump 100%" left="20" top="10" width="80" height="20" text="Jump 100%" setstate="ChatCommand" actionexpr="setvar[command, `#jump w `+ceiling[getheading[wobjectgetplayer[]]]%360+` 1000`]" />
        <control type="button" name="Jump 75%" left="200" top="10" width="80" height="20" text="Jump 75%" setstate="ChatCommand" actionexpr="setvar[command, `#jump w `+ceiling[getheading[wobjectgetplayer[]]]%360+` 750`]" />
        <control type="button" name="Jump 50%" left="20" top="40" width="80" height="20" text="Jump 50%" setstate="ChatCommand" actionexpr="setvar[command, `#jump w `+ceiling[getheading[wobjectgetplayer[]]]%360+` 500`]" />
        <control type="button" name="Jump 25%" left="200" top="40" width="80" height="20" text="Jump 25%" setstate="ChatCommand" actionexpr="setvar[command, `#jump w `+ceiling[getheading[wobjectgetplayer[]]]%360+` 250`]" />
        <control type="button" name="Tap Jump" left="110" top="25" width="80" height="20" text="Tap Jump" setstate="ChatCommand" actionexpr="setvar[command, `#jump sw `+ceiling[getheading[wobjectgetplayer[]]]%360+` 5`]" />

        <control type="button" name="NW" left="70" top="100" width="30" height="20" text="NW" setstate="ChatCommand" actionexpr="setvar[command, `#face northwest`]" />
        <control type="button" name="N" left="135" top="100" width="30" height="20" text="N" setstate="ChatCommand" actionexpr="setvar[command, `#face north`]" />
        <control type="button" name="NE" left="200" top="100" width="30" height="20" text="NE" setstate="ChatCommand" actionexpr="setvar[command, `#face northeast`]" />
        <control type="button" name="W" left="70" top="130" width="30" height="20" text="W" setstate="ChatCommand" actionexpr="setvar[command, `#face west`]" />
        <control type="button" name="E" left="200" top="130" width="30" height="20" text="E" setstate="ChatCommand" actionexpr="setvar[command, `#face east`]" />
        <control type="button" name="SW" left="70" top="160" width="30" height="20" text="SW" setstate="ChatCommand" actionexpr="setvar[command, `#face southwest`]" />
        <control type="button" name="S" left="135" top="160" width="30" height="20" text="S" setstate="ChatCommand" actionexpr="setvar[command, `#face south`]" />
        <control type="button" name="SE" left="200" top="160" width="30" height="20" text="SE" setstate="ChatCommand" actionexpr="setvar[command, `#face southeast`]" />

        <control type="button" name="Shift Jump 100%" left="20" top="220" width="100" height="20" text="Shift Jump 100%" setstate="ChatCommand" actionexpr="setvar[command, `#jump sw `+ceiling[getheading[wobjectgetplayer[]]]%360+` 1000`]" />
        <control type="button" name="Shift Jump 75%" left="180" top="220" width="100" height="20" text="Shift Jump 75%" setstate="ChatCommand" actionexpr="setvar[command, `#jump sw `+ceiling[getheading[wobjectgetplayer[]]]%360+` 750`]" />
        <control type="button" name="Shift Jump 50%" left="20" top="250" width="100" height="20" text="Shift Jump 50%" setstate="ChatCommand" actionexpr="setvar[command, `#jump sw `+ceiling[getheading[wobjectgetplayer[]]]%360+` 500`]" />
        <control type="button" name="Shift Jump 25%" left="180" top="250" width="100" height="20" text="Shift Jump 25%" setstate="ChatCommand" actionexpr="setvar[command, `#jump sw `+ceiling[getheading[wobjectgetplayer[]]]%360+` 250`]" />

    </control>

</view>
